{
    "parser": "babel-eslint",
    "plugins": [
        "import",
        "jest"
    ],
    "env": {
        "node": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "airbnb",
        "plugin:jest/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
		"linebreak-style": 0,
        "indent": [2, "tab"],
        "no-tabs": 0,
        "no-unused-vars": ["error", { "args": "none" }],
        "max-len": [
            "error",
            {
                "code": 200
            }
        ],
        "import/prefer-default-export": "off",
        "import/no-cycle": "off",
        "import/no-extraneous-dependencies": "off"
    }
}
